    <div class="uk-modal-dialog">
        <a class="uk-modal-close uk-close"></a>
        <h2>友情链接</h2>
        <ul id="link_qzhai" class=" uk-subnav uk-subnav-line">
            <% locals.friends.forEach(function (friend) { %>
                <li id="menu-item-601" class="" ><a href="<%= friend.link %>"><%= friend.name %></a></li>
            <%})%>
        </ul></div></div>
