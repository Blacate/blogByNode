<div id="sidebar" class="uk-width-small-1-1 uk-width-medium-1-4 uk-width-large-3-10">
    <ul class="ul">
        <li>
            <h4>近期文章</h4>
            <ul>
                <% locals.recentArticles.forEach(function (article) { %>
                    <li><a href="/article/<%= article._id %>"><%= article.title %></a></li>
                <% }) %>
            </ul>
        </li>
        <li>
            <h4>文章分类</h4>
            <ul>
                <% locals.categorys.forEach(function (category) { %>
                    <li><a href='/category/<%= category._id %>'><%= category.name %></a></li>
                <% }) %>
            </ul>
        </li>
        <li>
            <h4>标签云</h4>
            <div class="post-tags">
                <% locals.tags.forEach(function (tag) { %>
                    <a href='/tag/<%= tag._id %>' class='tag-link-19' title='6个话题' style='font-size: 12px;'><%= tag.name %></a>
                <% })%>


            </div>
        </li>
        <li>
            <h4>优惠链接</h4>
            <ul>
                <% locals.discounts.forEach(function (link) { %>
                <li><a href='<%= link.link %>'><%= link.name %></a></li>
                <% }) %>
            </ul>
        </li>
    </ul>
</div>
<div class="ft uk-visible-small">
    <p><a href="#my-link" data-uk-modal="{target:'#my-link'}">友情链接</a> </p>
</div>
</div>
<a href="#" class="top" data-uk-smooth-scroll style="display:none"><i class="uk-icon-angle-up"></i></a>
